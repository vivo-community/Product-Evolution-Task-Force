{{define "mapping"}}
"person":{
	"properties":{
		"id":           { "type": "text" },
		"uri":          { "type": "text" },
		"primaryTitle": { "type": "text" },
		"name":{
			"type":"object",
			"properties": {
				"firstName":  { "type": "text" },
				"lastName":   { "type": "text" },
				"middleName": { "type": "text" },
				"suffix":     { "type": "text" },
				"prefix":     { "type": "text" }
		    }
		},
		"image": {
			"type": "object",
			"properties": {
				"main":      { "type": "text" },
				"thumbnail": { "type": "text" }
			}
		},
		"identifier" : {
			"type": "object",
			"properties": {
				"orchid": { "type": "text" },
				"isni":   { "type": "text" }
			}
		},
	        "keywordList": {
	            "type": "nested",
	            "properties": {
		        "uri":   { "type": "keyword" },
		        "label": { "type": "keyword" }
	            }
		},
                {{ template "person_educations" }},
                {{ template "person_affiliations" }},
                {{ template "person_contact" }},
		"extensions": {
			"type": "nested",
			"properties": {
				"key":   { "type": "text" },
				"value": { "type": "text" }
			}			
		}
    }
}
{{ end }} 
